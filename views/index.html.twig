</head>
<body>

<div class="container-fluid">
    <div class="row nav">

        <div class="col-lg-2">
            <a href="index.php">Gabriel Mattei</a>
        </div>
        <div class="col-lg-offset-2 col-lg-2">
            <a class="musique" id="symf">Symphonic Music</a>
            {#<input class="musique" type="checkbox" id="symf"/>#}
        </div>
        <div class="col-lg-2">
            <a class="performing" id="perfo">Performing Art</a>
        </div>
        <div class="col-lg-offset-3 col-lg-1">
            <a href="#">About</a>
        </div>

    </div>
</div>

    <div class="content" >
        <p>

            {% for content in contents %}

                {% if content.best == 1 %}
                    <span class="{{ content.category }}">
                        <span class="title bests"> {{ content.title}}</span>
                        <span class="subtitle"> {{ content.subtitle }}</span>
                            {% if content.new == 1 %}
                                <span class="new"> new! </span>
                            {% endif %}
                        <img src="img/silence.png" alt="silence">
                    </span>
                {% endif %}

            {% endfor %}

            {% set lastyear = '' %}

            {% for content in contents %}

                {% if lastyear !=  content.year %}
                    <span class="labelyear">.</span>
                    <span id="year{{ content.year }}" class="labelyear">{{ content.year }}</span>
                    {% set lastyear = content.year%}
                {% endif %}

                        <span class="content{{ content.year }} {{ content.category }}" type="text" data-toggle="modal" data-target="#myModal">

                            <span class="title"> {{ content.title}}</span>
                            <span class="subtitle"> {{  content.subtitle }}</span>
                                {% if content.new == 1 %}
                                    <span class="new"> new! </span>
                                {% endif %}
                            <img src="img/silence.png" alt="silence">
                        </span>

        {% endfor %}
            <span class="labelyear">.</span>
                <div class="modal fade modal-fullscreen" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <h4 class="modal-title" id="myModalLabel">{{content.title}}</h4>
                            </div>
                            <div class="modal-body">
                                <iframe width="560" height="315" src="https://www.youtube.com/embed/RIii9I8UhT4" frameborder="0" allowfullscreen></iframe>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
        </p>
    </div>

<!-- script -->

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
<script src="js/bootstrap.min.js"></script>

<script>
    $(document).ready(function () {
        $("[id^=year]").click(function () {
            annee = $(this).attr('id').replace('year','');

            $(".content"+annee).fadeToggle();
        });
    });

    $(document).ready(function() {
        $("#symf").click(function () {
            $(".SymphonicMusic").css("visibility", 'visible');
            $(".PerformingArt").css("visibility", 'hidden');
            $(".performing").css("opacity", '0.05')
            $(".musique").css("opacity", '1')


        });

        $("#perfo").click(function () {
            $(".PerformingArt").css("visibility", 'visible');
            $(".SymphonicMusic").css("visibility", 'hidden');
            $(".musique").css("opacity", '0.05')
            $(".performing").css("opacity", '1')
        });
    });
</script>

</body>
</html>