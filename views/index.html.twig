<div class="content"><p>

        {% set lastyear = '' %}
        {% for   content in contents %}
            {% if lastyear !=  content.year %}

                <span id="year{{ content.year }}" class="labelyear"> <strong>{{ content.year }}</strong> </span>
                {% set lastyear = content.year%}


            {% endif %}

            <span class="content{{ content.year }}"><i>{{ content.title}}</i>{{  content.subtitle }}</span>
        {% endfor %}

    </p>
</div>
