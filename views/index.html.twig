<body>

<div class="container-fluid">
    <div class="row nav">

        <div class="col-lg-2">
            <a href="index.php">Gabriel Mattei</a>
        </div>
        <div class="col-lg-offset-2 col-lg-2">
            <label for="symf">Symphonic Music</label>
            <input class="musique" type="checkbox" id="symf">
        </div>
        <div class="col-lg-2">
            <label for="perfo">Performing Art</label>
            <input class="performing" type="checkbox" id="perfo">
        </div>
        <div class="col-lg-offset-3 col-lg-1">
            <a href="#">About</a>
        </div>
    </div>
</div>

<div class="content"><p>

        {% for content in contents %}
            {% if content.best == 1 %}
                <span class="{{ content.category }}"><span class="title bests"> {{ content.title}}</span><span class="subtitle"> {{ content.subtitle }}</span></span>
            {% endif %}
        {% endfor %}

        {% set lastyear = '' %}
        {% for   content in contents %}

                {% if lastyear !=  content.year %}

                    <span id="year{{ content.year }}" class="labelyear"> <strong>{{ content.year }}</strong> </span>
                {% set lastyear = content.year%}

                {% endif %}

                    <span class="content{{ content.year }} {{ content.category }}"><span class="title"> {{ content.title}}</span><span class="subtitle"> {{  content.subtitle }}</span></span>

        {% endfor %}

    </p>
</div>

<!-- script -->

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>

<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
<script src="js/bootstrap.min.js"></script>

<script>
    $(document).ready(function () {
        $("[id^=year]").click(function () {
            annee = $(this).attr('id').replace('year','');

            $(".content"+annee).fadeToggle();
        });
    });
</script>

</body>
</html>