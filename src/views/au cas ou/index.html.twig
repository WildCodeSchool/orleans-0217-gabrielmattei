{% include 'partial/header.html.twig' %}

<div class="content">

    {% for content in contents %}

        {% if content.best == 1 %}
            <span class="{{ content.category }}" data-toggle="modal" data-target="#{{ content.idcontent }}"
                  contenteditable="false">
                        <span class="title bests"> {{ content.title }}</span>
                        <span class="subtitle"> {{ content.subtitle }}</span>
                {% if content.new == 1 %}
                    <span class="new"> new! </span>
                {% endif %}
                <img src="img/silence.png" alt="silence">
                    </span>
        {% endif %}

    {% endfor %}

    {% set lastyear = '' %}

    {% for content in contents %}

        {% if lastyear !=  content.year %}
            <span class="labelyear">.</span>
            <span id="year{{ content.year }}" class="labelyear">{{ content.year }}</span>
            {% set lastyear = content.year %}
        {% endif %}

        <span class="content{{ content.year }} {{ content.category }}" data-toggle="modal"
              data-target="#{{ content.idcontent }}" contenteditable="false">


            {% if content.new == 1 %}
                <span class="new"> new! </span>
            {% endif %}
            <img src="img/silence.png" alt="silence">
                     </span>

        <span class="content{{ content.year }}">
                    <span class="{{ content.category }}">
                        <span class="title"> {{ content.title }}</span>
                        <span class="subtitle"> {{ content.subtitle }}</span>
                    </span>
                </span>
    {% endfor %}

</div>

