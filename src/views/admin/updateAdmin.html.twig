{% extends 'layoutAdmin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="title">Modifier le projet</h4>
                        </div>
                        <div class="card-content table-responsive">

                            <form method="post" enctype="multipart/form-data">

                                <div clas="row">

                                    <div class="col-md-offset-2 col-md-2">
                                        <div class="form-group label-floating">
                                            <input type="checkbox" name="best" id="best" value="1" {% if resultat.best == 1 %} checked {% else %}{% endif %}/>Favoris
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group label-floating">
                                            <input type="checkbox" name="new" id="new" value="1" {% if resultat.new == 1 %} checked {% else %}{% endif %}/>New
                                        </div>
                                    </div>

                                    <div class="col-md-offset-2 col-md-2">
                                        <div class="form-group label-floating">
                                            <input type="radio" name="category" id="category" value="symphonicMusic"
                                                  {% if resultat.category == 'symphonicMusic' %} checked {% else %}{% endif %}/>Symphonic Music
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group label-floating">
                                            <input type="radio" name="category" id="category" value="performingArt" {% if resultat.category == 'performingArt' %} checked {% else %}{% endif %}/>Performing
                                            Art
                                        </div>
                                    </div>


                                </div>
                                <div class="row">

                                    <div class="col-md-2">
                                        <div class="form-group label-floating">
                                            <label for="year" class="control-label">Année du projet :</label>
                                            <input type="text" class="form-control" name="year" id="year"
                                                   value="{{ resultat.year }}">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            <label for="title" class="control-label">Titre du projet :</label>
                                            <input type="text" class="form-control" name="title" id="title"
                                                   value="{{ resultat.title }}">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            <label class="control-label" for="subtitle">Sous-titre du projet
                                                :</label>
                                            <input type="text" class="form-control" name="subtitle"
                                                   id="subtitle" value="{{ resultat.subtitle }}">
                                        </div>
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Crédits du projet :</label>
                                            <div class="form-group label-floating">
                                                <label class="control-label" for="credits"> </label>
                                                <textarea class="form-control" rows="4" name="credits"
                                                          id="credits"> {{ resultat.credits }} </textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Description du projet :</label>
                                            <div class="form-group label-floating">
                                                <label class="control-label" for="description"> </label>
                                                <textarea class="form-control" rows="4" name="description"
                                                          id="description">{{ resultat.description }}</textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                {% for resMedia in resMedias %}
                                    {% if loop.index ==1 %}

                                        {% if resMedia.linkType == 'audio' %}
                                            <div class="col-md-4">


                                                <p>{{ resMedia.link }}</p>
                                                <div class="form-group label-floating">
                                                    <label for="file">Téléchargez votre musique :</label>

                                                </div>

                                                <input type="file" id="file" name="files[]"
                                                       multiple="multiple"
                                                       accept="audio/*"/>

                                            </div>
                                        {% elseif resMedia.linkType == 'image' %}

                                            <div class="col-md-4">



                                                <div class="form-group label-floating">
                                                    <label for="file">Téléchargez vos images :</label>

                                                </div>

                                                <input type="file" id="file" name="files[]"
                                                       multiple="multiple"
                                                       accept="image/*"/>

                                            </div>


                                        {% elseif resMedia.linkType == 'video' %}

                                            <label class="control-label" for="video">URL youtube: </label>
                                            <input type="text" class="form-control" name="video" id="video"
                                                   value="{{ resMedia.link }}">


                                        {% endif %}
                                    {% endif %}

                                    {% else %}

                                            <div class="row">
                                                <div class="col-md-12">
                                                    <ul class="nav nav-tabs nav-justified" role="tablist">
                                                        <li role="presentation" class="active"><a href="#video"
                                                                                                  aria-controls="video" role="tab"
                                                                                                  data-toggle="tab">video</a></li>
                                                        <li role="presentation"><a href="#audio" aria-controls="audio" role="tab"
                                                                                   data-toggle="tab">audio</a></li>
                                                        <li role="presentation"><a href="#image" aria-controls="image" role="tab"
                                                                                   data-toggle="tab">image(s)</a></li>

                                                    </ul>
                                                    <div class="tab-content">
                                                        <div role="tabpanel" class="tab-pane active" id="video">
                                                            <div class="col-md-6">
                                                                <div class="form-group label-floating">
                                                                    <label class="control-label" for="video">URL youtube: (veuillez
                                                                        copier/coller le lien youtube contenu dans l'Iframe)</label>
                                                                    <input type="text" class="form-control" name="video" id="video">

                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div role="tabpanel" class="tab-pane" id="audio">
                                                            <div class="upload">
                                                                <div class="form-group label-floating">
                                                                    <label for="file">Téléchargez votre musique :</label>

                                                                </div>

                                                                <input type="file" id="file" name="files[]" multiple="multiple"
                                                                       accept="audio/*"/>
                                                            </div>
                                                        </div>
                                                        <div role="tabpanel" class="tab-pane" id="image">
                                                            <div class="upload">
                                                                <div class="form-group label-floating">
                                                                    <label for="file">Téléchargez vos images :</label>

                                                                </div>

                                                                <input type="file" id="file" name="files[]" multiple="multiple"
                                                                       accept="image/*"/>


                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            {% endfor %}

                                <div class="button">
                                    <input type="hidden" name="id" value="{{ resultat.id }}">
                                    <button type="submit" name="update" id="update" class="btn pull-right"
                                            value="update">
                                        Modifier
                                    </button>
                                    <div class="clearfix"></div>
                                </div>


                            </form>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div class="row">

                                            {% for resMedia in resMedias %}
                                                {% if resMedia.linkType == 'image' %}
                                                    <form action="" method="post">
                                                        <div class="col-md-1">
                                                            <div class="thumb">
                                                                <img src="../assets/upload/{{ resMedia.link }}"
                                                                     alt="img{{ resMedia.id }}">
                                                                <br>
                                                                <input type="hidden" name="id"
                                                                       value="{{ resMedia.id }}">
                                                                <button type="submit" name="delete" id="delete"
                                                                        class="btn"
                                                                        value="delete">
                                                                    X
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>


    </div>
    </div>

{% endblock %}